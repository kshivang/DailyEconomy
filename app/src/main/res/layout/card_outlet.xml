<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/outlet_image"
            android:src="@drawable/placeholder_profile"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/name"
            android:text="Order"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorPrimaryDark"
            android:layout_alignBottom="@+id/outlet_image"
            android:id="@+id/order"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/order"
            android:text="Bill"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorPrimaryDark"
            android:layout_alignBottom="@+id/outlet_image"
            android:id="@+id/history"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_marginLeft="5dp"
            android:id="@+id/name"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/outlet_image"
            android:layout_toEndOf="@+id/outlet_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="locatioin"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:id="@+id/location"
            android:layout_below="@+id/name"
            android:layout_toRightOf="@+id/outlet_image"
            android:layout_toEndOf="@+id/outlet_image" />
    </RelativeLayout>

</android.support.v7.widget.CardView>